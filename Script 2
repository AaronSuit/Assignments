def createHisto(featureclass, field):
    valuelist = []
    #meansum = 0
    #numberofvalues = 0
    for value in arcpy.da.SearchCursor(featureclass, field):
        valuelist.append(value)
        #meansum = meansum + value
        #numberofvalues = numberofvalues + 1
    n, bins, patches = plt.hist(valuelist, 10, facecolor='blue', alpha=0.5)
    plt.xlabel(histo_field)
    plt.ylabel('Frequency')
    plt.title(r'Histogram of : {0}'.format(histo_field))
    plt.subplots_adjust(left=0.15)
    #mean = meansum / numberofvalues
    #print(mean)
    return

#This is the number of bins your histogram will have.  
